<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes" access="global">

    <div class="slds-grid slds-gutters" id="myContainer">
        <div class="slds-col slds-size_1-of-3">
            <fieldset class="myFieldset">
                <legend class="myLegend">Habit</legend>
                <c:Tabset habit="true" typeTask="Habit" />
            </fieldset>
        </div>
        <div class="slds-col slds-size_1-of-3">
            <fieldset class="myFieldset">
                <legend class="myLegend">TO-DOs</legend>
                <c:Tabset habit="false" typeTask="TO-DO" />
            </fieldset>
        </div>
        <div class="slds-col slds-size_1-of-3">
            <fieldset class="myFieldset">
                <legend class="myLegend">Daily</legend>
                <c:Tabset habit="false" typeTask="Daily" />
            </fieldset>
        </div>
    </div>

    <!-- Notificacion-->
    <div class="page-footer page-section" id="notifi">
         
        <div class="slds-grid slds-grid_align-spread">
            <p class="slds-col"> </p>
            <div aria-live="assertive" aria-atomic="true" class="slds-assistive-text">event notification: Your
                points
                are changed!</div>
            <section class="slds-notification" role="dialog" aria-labelledby="noti52" aria-describedby="dialog-body-id-2">
                <div class="slds-notification__body" id="dialog-body-id-2">
                    <a class="slds-notification__target slds-media" href="javascript:void(0);">
                        <lightning:icon class="slds-icon_container slds-icon-standard-event slds-media__figure"
                            iconName="standard:contact" alternativeText="Task" />

                        <div class="slds-media__body">
                            <h2 class="slds-text-heading--small slds-m-bottom--xx-small">
                                <span class="slds-assistive-text">event notification:</span>Your points are
                                changed!</h2>

                        </div>
                    </a>
                    <lightning:buttonIcon class="slds-button slds-button_icon slds-button--icon-container slds-notification__close"
                        iconName="utility:close" size="small" onclick="{! c.closeNotify }" variant="bare"
                        alternativeText="Close" />
                </div>
            </section>
        </div>
</div>



</aura:component>