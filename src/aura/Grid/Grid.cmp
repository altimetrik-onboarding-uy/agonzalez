<aura:component controller="TaskController">
    <!-- attributes -->
    <aura:attribute name="tasks" type="Assignment__c[]" />

    <!-- Attribute for change button -->
    <aura:attribute name="buttonHabit" type="Boolean" default="true" />

    <!-- Attribute for the status task -->
    <aura:attribute name="status" type="String" />

    <!-- Attribute for the status task -->
    <aura:attribute name="typeTask" type="String" />

    <!-- handlers-->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

 

    <!-- the container element determine the height of the datatable -->
    <div class="slds-scrollable_y">
        <table class="slds-table slds-table_bordered slds-table_striped slds-table_cell-buffer slds-table_fixed-layout">
            <tbody>
                <!-- Use the Apex model and controller to fetch server side data -->
                <aura:iteration items="{!v.tasks}" var="task">
                    <tr>
                        <!-- Use a Lightning Base Component To display an icon next to the label  -->
                        <td class="slds-border_left" role="gridcell">
                            <aura:if isTrue="{!v.buttonHabit}">
                                <lightning:buttonIcon value="{!task.Id}" iconName="utility:add" alternativeText="Completed"
                                    onclick="{!c.completed}" />

                                <aura:set attribute="else">
                                    <lightning:buttonIcon value="{!task.Id}" iconName="utility:check" alternativeText="Completed"
                                        onclick="{!c.completed}" />

                                </aura:set>
                            </aura:if>

                        </td>

                        <td class="dataRow" role="gridcell">
                            <div id="name" class="slds-truncate" title="{!task.Name}">{!task.Name}</div>
                        </td>
                        <td class="slds-border_right" role="gridcell">
                            <aura:if isTrue="{!v.buttonHabit}">
                                <lightning:buttonIcon value="{!task.Id}" iconName="utility:dash" alternativeText="Failed"
                                    onclick="{!c.failedHabit}" />

                                <aura:set attribute="else">
                                    <lightning:buttonIcon value="{!task.Id}" iconName="utility:close" alternativeText="Failed"
                                        onclick="{!c.failed}" />

                                </aura:set>
                            </aura:if>

                        </td>

                    </tr>
                </aura:iteration>
            </tbody>
        </table>
    </div>
</aura:component>